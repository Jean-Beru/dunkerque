{% for message in app.session.flashbag.get('error') %}
    <div class="alert alert-danger alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        {{ message|trans }}
    </div>
{% endfor %}

