<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{ 'repositories.most_stared'|trans }}</h3>
    </div>
    <div class="panel-body">
        <ul>
            {% for repo in repositories %}
                <li>
                    <a href="{{ path('repository', {name: repo.name}) }}">{{ repo.name }}</a>
                    <span class="pull-right">{{ repo.stars }} <span class="glyphicon glyphicon-star"></span></span>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>
